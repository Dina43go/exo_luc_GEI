<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Détails du produit"
            android:textSize="20sp"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="name"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/prodDesignation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" : 150 cfa"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="description"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/prodDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" : 40 fca"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="price"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/prodPrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : 40 fca"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="quantité diponible"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/prodQuantite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" : 40 fca"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="quantite limite"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/limite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" : 2 "
                android:textSize="20sp"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>